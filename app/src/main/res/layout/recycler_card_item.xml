<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
    <ImageView
        android:id="@+id/image_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/place_loadder_pos"
        android:scaleType="fitXY" />
        
        <TextView
            android:id="@+id/textPosTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="6dp"
            android:text="Title"
            android:layout_alignBottom="@+id/image_thumbnail"
            android:textColor="#fafafa"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPosDescription"
            android:layout_below="@+id/image_thumbnail"
            android:maxLines="2"
            android:padding="8dp"
            android:textSize="14sp"
            android:text="Fold you hands like the pic and give a light smile on your face you can set your camera for blur background."
            android:textColor="#666"/>
        
    </RelativeLayout>
    
</android.support.v7.widget.CardView>